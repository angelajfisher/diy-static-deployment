[
  {
    "id": "pull-site-changes",
    "http-methods": ["POST"],
    "execute-command": "/var/scripts/pull-site-changes.sh",
    "command-working-directory": "/var/www/communitea.life",
    "response-message": "SUCCESS: Site contents refreshed.",
    "pass-environment-to-command": [
      {
        "source": "payload",
        "envname": "ARTIFACT_ID",
        "name": "data.artifact-id"
      },
      {
        "source": "payload",
        "envname": "NEEDS_PARITY",
        "name": "data.needs-parity"
      }
    ],
    "trigger-rule":
    {
      "or":
      [
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "<MY SECRET>",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "ip-whitelist",
            "ip-range": "172.16.4.106/24"
          }
        }
      ]
    },
    "trigger-rule-mismatch-http-response-code": 401
  }
]
